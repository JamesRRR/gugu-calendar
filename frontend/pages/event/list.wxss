.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 搜索框样式 */
.search-box {
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  margin: -20rpx -20rpx 20rpx;
}

.search-box input {
  background: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 活动列表样式 */
.event-list {
  padding-bottom: 30rpx;
}

.event-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.event-item .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.event-item .description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.event-item .time,
.event-item .location {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.event-item .participants {
  font-size: 26rpx;
  color: #1890ff;
  margin-top: 16rpx;
  display: block;
}

/* 加载更多样式 */
.loading,
.no-more {
  text-align: center;
  padding: 30rpx;
}

.loading text,
.no-more text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 