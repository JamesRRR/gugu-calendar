.list-container {
  min-height: 100vh;
  background-color: #FFF6F6;
  padding: 30rpx 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 36rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.header-emoji {
  font-size: 40rpx;
  margin-left: 10rpx;
}

.event-item {
  display: flex;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 182, 193, 0.2);
  border: 2rpx solid #FFE4E4;
}

.time-block {
  background: #FFE4E4;
  border-radius: 16rpx;
  padding: 16rpx;
  min-width: 120rpx;
  text-align: center;
  margin-right: 20rpx;
}

.date {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
  margin-bottom: 4rpx;
  display: block;
}

.time {
  font-size: 24rpx;
  color: #FF8B8B;
  display: block;
}

.content-block {
  flex: 1;
}

.title-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.category-emoji {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-emoji {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.location {
  font-size: 26rpx;
  color: #666666;
}

.footer-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.participants {
  display: flex;
  align-items: center;
}

.people-emoji {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.count {
  font-size: 24rpx;
  color: #999999;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status-tag.ongoing {
  background: #FFE4E4;
  color: #FF6B6B;
}

.status-tag.upcoming {
  background: #E4F7FF;
  color: #4DABFF;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #FF8B8B;
  border-radius: 50%;
  animation: bounce 0.5s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

.loading-text {
  font-size: 28rpx;
  color: #FF8B8B;
  margin-top: 20rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}

.empty-emoji {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #FF8B8B;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #FFB6C1;
}

@keyframes bounce {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-10rpx);
  }
} 