/* 页面容器 */
.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部按钮留出空间 */
}

/* 活动头部 */
.event-header {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.event-header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.creator-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 2rpx solid #f5f5f5;
}

.creator-info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.creator-info .nickname {
  font-size: 28rpx;
  color: #666;
}

/* 活动信息 */
.event-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  margin-bottom: 30rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-item .value {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

/* 参与者列表 */
.participants-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.participants-list {
  white-space: nowrap;
  padding: 10rpx 0;
}

.participant {
  display: inline-block;
  width: 120rpx;
  margin-right: 20rpx;
  text-align: center;
}

.participant:last-child {
  margin-right: 0;
}

.participant .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.participant .nickname {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 底部按钮 */
.action-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-buttons button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.join-btn {
  background: #07c160 !important;
  color: #fff !important;
}

.leave-btn {
  background: #ff4d4f !important;
  color: #fff !important;
}

.share-btn {
  background: #1890ff !important;
  color: #fff !important;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: #f8f8f8;
}

/* 动画效果 */
.event-header,
.event-info,
.participants-section {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 按钮点击效果 */
.action-buttons button:active {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.2s ease;
}

/* 适配iPhone底部安全区域 */
@supports (padding-bottom: constant(safe-area-inset-bottom)) {
  .action-buttons {
    padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  }
}

@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .action-buttons {
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  }
} 