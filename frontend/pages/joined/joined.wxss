.joined-container {
  padding: 20rpx;
  background-color: #FFF6F6;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.header-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.header-text {
  font-size: 36rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.event-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.1);
  border: 2rpx solid #FFE4E4;
}

.event-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.event-type-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.event-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.event-info {
  padding: 10rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666666;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
} 