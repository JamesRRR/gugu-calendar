<view class="container">
  <view class="header">
    <image class="logo" src="/images/logo.png" mode="aspectFit"/>
    <text class="title">可爱记账本</text>
  </view>
  
  <view class="cute-card balance-card">
    <text class="label">当前余额</text>
    <text class="amount">¥ {{balance}}</text>
  </view>

  <view class="action-buttons">
    <button class="cute-btn" bindtap="onAddIncome">
      <image src="/images/income-icon.png" mode="aspectFit"/>
      收入
    </button>
    <button class="cute-btn" bindtap="onAddExpense">
      <image src="/images/expense-icon.png" mode="aspectFit"/>
      支出
    </button>
  </view>

  <view class="cute-card records-list">
    <!-- 现有的记录列表内容 -->
  </view>
</view> 