.container {
  padding: 20px;
}

.type-selector {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.type-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px 20px;
  border-radius: var(--border-radius);
  background: var(--secondary-color);
  transition: all 0.3s ease;
}

.type-btn.active {
  background: var(--primary-color);
  color: white;
  transform: scale(1.05);
}

.type-btn image {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

.input-group {
  margin: 20px 0;
}

.label {
  display: block;
  color: var(--text-color);
  margin-bottom: 8px;
  font-size: 14px;
}

.amount-input {
  font-size: 24px;
  text-align: center;
}

.category-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10px;
  margin-top: 10px;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  border-radius: var(--border-radius);
  background: var(--secondary-color);
  transition: all 0.3s ease;
}

.category-item.active {
  background: var(--primary-color);
  color: white;
  transform: scale(1.05);
}

.category-item image {
  width: 30px;
  height: 30px;
  margin-bottom: 4px;
}

.submit-btn {
  width: 100%;
  margin-top: 30px;
} 