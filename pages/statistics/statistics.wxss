.container {
  padding: 20px;
}

.summary-card {
  display: flex;
  justify-content: space-around;
  padding: 20px;
  background: linear-gradient(135deg, var(--primary-color), #FFD1DC);
  margin-bottom: 20px;
}

.summary-item {
  text-align: center;
  color: white;
}

.label {
  font-size: 14px;
  opacity: 0.9;
}

.amount {
  display: block;
  font-size: 24px;
  font-weight: bold;
  margin-top: 8px;
}

.expense {
  color: #FF6B6B;
}

.income {
  color: #4CAF50;
}

.chart-title {
  font-size: 16px;
  color: var(--text-color);
  margin-bottom: 15px;
  text-align: center;
}

.pie-chart, .line-chart {
  width: 100%;
  height: 200px;
  margin: 10px 0;
} 