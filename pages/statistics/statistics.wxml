<view class="container">
  <view class="cute-card summary-card">
    <view class="summary-item">
      <text class="label">本月支出</text>
      <text class="amount expense">¥{{monthExpense}}</text>
    </view>
    <view class="summary-item">
      <text class="label">本月收入</text>
      <text class="amount income">¥{{monthIncome}}</text>
    </view>
  </view>

  <view class="cute-card">
    <view class="chart-title">支出分类统计</view>
    <canvas canvas-id="pieChart" class="pie-chart"></canvas>
  </view>

  <view class="cute-card">
    <view class="chart-title">收支趋势</view>
    <canvas canvas-id="lineChart" class="line-chart"></canvas>
  </view>
</view> 