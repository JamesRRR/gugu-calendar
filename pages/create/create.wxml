<view class="container">
  <view class="cute-card">
    <form bindsubmit="submitForm">
      <view class="input-group">
        <text class="label">活动名称</text>
        <input class="cute-input" name="title" placeholder="请输入活动名称" value="{{formData.title}}"/>
      </view>

      <view class="input-group">
        <text class="label">活动时间</text>
        <picker mode="multiSelector" 
                value="{{dateTimeIndex}}" 
                range="{{dateTimeArray}}" 
                bindchange="changeDateTime" 
                bindcolumnchange="changeDateTimeColumn">
          <view class="picker-view">
            <text>{{formData.dateTime || '请选择活动时间'}}</text>
            <image class="arrow" src="/images/arrow-right.png" mode="aspectFit"/>
          </view>
        </picker>
      </view>

      <view class="input-group">
        <text class="label">活动地点</text>
        <view class="location-picker" bindtap="chooseLocation">
          <text>{{formData.address || '请选择活动地点'}}</text>
          <image class="arrow" src="/images/arrow-right.png" mode="aspectFit"/>
        </view>
      </view>

      <view class="input-group">
        <text class="label">活动描述</text>
        <textarea class="cute-input description" 
                  name="description" 
                  placeholder="请输入活动描述" 
                  value="{{formData.description}}"
                  maxlength="200"/>
      </view>

      <button class="cute-btn submit-btn" form-type="submit">创建活动</button>
    </form>
  </view>
</view> 