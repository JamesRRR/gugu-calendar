.container {
  padding: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.label {
  display: block;
  color: var(--text-color);
  margin-bottom: 8px;
  font-size: 14px;
}

.picker-view, .location-picker {
  background: white;
  border: 2px solid var(--primary-color);
  border-radius: var(--border-radius);
  padding: 8px 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow {
  width: 16px;
  height: 16px;
  opacity: 0.5;
}

.description {
  width: 100%;
  height: 100px;
}

.submit-btn {
  margin-top: 30px;
  width: 100%;
} 