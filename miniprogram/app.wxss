/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 20rpx;
}

.form-group {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
}

input, textarea {
  width: 100%;
  border: 2rpx solid #eee;
  border-radius: 6rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.picker {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 6rpx;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  width: 90%;
  margin-top: 40rpx;
  border-radius: 40rpx;
}

@import "style/colorui/main.wxss";
@import "style/colorui/icon.wxss"; 