.container {
  padding: 20rpx;
}

.event-list {
  width: 100%;
}

.event-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.event-info {
  flex: 1;
}

.event-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.event-date {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.event-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.event-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  background: #07c160;
  color: #fff;
  margin-left: 20rpx;
}

.event-status.cancelled {
  background: #ff4d4f;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 200rpx;
} 