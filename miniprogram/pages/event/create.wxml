<view class="container">
  <form bindsubmit="submitEvent">
    <view class="form-group">
      <view class="form-item">
        <text class="label">活动名称</text>
        <input name="title" placeholder="请输入活动名称" />
      </view>

      <view class="form-item">
        <text class="label">日期</text>
        <picker 
          mode="date" 
          value="{{date}}" 
          start="{{minDate}}" 
          bindchange="dateChange"
          class="picker-wrapper">
          <view class="picker-content">
            <text class="{{date ? '' : 'placeholder'}}">{{date || '请选择日期'}}</text>
            <text class="picker-arrow">></text>
          </view>
        </picker>
      </view>

      <view class="form-item">
        <text class="label">时间</text>
        <picker 
          mode="time" 
          value="{{time}}" 
          bindchange="timeChange"
          class="picker-wrapper">
          <view class="picker-content">
            <text class="{{time ? '' : 'placeholder'}}">{{time || '请选择时间'}}</text>
            <text class="picker-arrow">></text>
          </view>
        </picker>
      </view>

      <view class="form-item">
        <text class="label">活动描述</text>
        <textarea name="description" placeholder="请输入活动描述"></textarea>
      </view>
    </view>

    <button form-type="submit" type="primary">创建活动</button>
  </form>
</view> 