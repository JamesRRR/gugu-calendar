.event-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #faf5f5;
}

.event-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.info-section {
  margin: 20rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  display: inline-block;
  vertical-align: middle;
}

.description-section {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #fff5f5;
  border-radius: 12rpx;
}

.description-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.description-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.participants-section {
  margin-top: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.participant-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.avatar-placeholder {
  background: #fff5f5;
  border: 2rpx solid #ffe4e6;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff8c98;
  font-size: 36rpx;
}

.participant-item .nickname {
  font-size: 24rpx;
  color: #333;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.creator-tag {
  font-size: 20rpx;
  color: #07c160;
  background: #f0fff0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-top: 4rpx;
}

.action-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 20rpx calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
}

.auth-overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.auth-card {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 36rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.12);
}

.auth-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 18rpx;
}

.auth-desc {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 28rpx;
}

.auth-nickname {
  width: 100%;
  height: 84rpx;
  border-radius: 18rpx;
  background: #fff8f8;
  border: 2rpx solid #ffe4e6;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 18rpx;
  box-sizing: border-box;
}

.auth-btn {
  width: 100%;
  height: 84rpx;
  border-radius: 42rpx;
  background: linear-gradient(135deg, #baf3dc, #8fe6c8);
  color: #1f5b43;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.auth-btn::after {
  border: none;
}

.auth-cancel {
  width: 100%;
  height: 84rpx;
  border-radius: 42rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  margin-top: 16rpx;
  border: none;
}

.auth-cancel::after {
  border: none;
}

.action-btn {
  min-width: 140rpx;
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #2b2b2b;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.06);
}

.action-btn .icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.share-btn {
  background: linear-gradient(135deg, #baf3dc, #8fe6c8);
  color: #1f5b43;
}

.quit-btn {
  background: linear-gradient(135deg, #ffd6d6, #ffb3ba);
  color: #7a2b2f;
}

.gugu-btn {
  background: linear-gradient(135deg, #ffe7c2, #ffd59a);
  color: #6b4a1a;
}

.gugu-btn[disabled] {
  background: #eaeaea;
  color: #999;
}

.join-btn {
  background: #07c160;
}

.cancel-btn {
  background: #ff4d4f;
}

.action-btn[disabled] {
  background: #eaeaea !important;
  color: #999 !important;
  opacity: 1;
}

/* 当活动取消时显示的提示 */
.cancelled-tip {
  text-align: center;
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 20rpx;
  background: #fff5f5;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.event-info {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item .icon {
  margin-right: 20rpx;
  font-size: 36rpx;
}

.info-item .text {
  font-size: 28rpx;
  color: #333;
}
 