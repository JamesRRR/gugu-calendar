.event-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #faf5f5;
}

.event-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.info-section {
  margin: 20rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin: 15rpx 0;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.description-section {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #fff5f5;
  border-radius: 12rpx;
}

.description-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.description-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.participants-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #ffcece;
}

.nickname {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  padding: 0 30rpx;
}

.join-btn {
  background: #ff9999;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.join-btn[disabled] {
  background: #ccc;
  color: #fff;
}

.button-group {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.quit-btn {
  background: #ffecec;
  color: #ff6666;
}

.share-btn {
  background: #ecfff2;
  color: #4caf50;
}

.gugu-btn {
  background: #fff5ec;
  color: #ff9800;
} 