.container {
  padding: 20rpx;
}

.event-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
}

.event-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  background: #07c160;
  color: #fff;
}

.event-status.cancelled {
  background: #ff4d4f;
}

.event-info {
  margin-bottom: 40rpx;
}

.info-item {
  margin-bottom: 20rpx;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.info-item .content {
  font-size: 30rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.action-btn {
  min-width: 180rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.share-btn {
  background-color: #1aad19;
  color: white;
}

.gugu-btn {
  background-color: #ff9800;
  color: white;
}

.join-btn {
  background-color: #07c160;
  color: white;
}

.quit-btn {
  background-color: #ff4d4f;
  color: white;
}

.cancelled-text {
  color: #ff4d4f;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
} 