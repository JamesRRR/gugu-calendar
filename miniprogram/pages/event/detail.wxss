.event-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #faf5f5;
}

.event-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.info-section {
  margin: 20rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  display: inline-block;
  vertical-align: middle;
}

.description-section {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #fff5f5;
  border-radius: 12rpx;
}

.description-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.description-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.participants-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.participant-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
}

.avatar {
  font-size: 40rpx;
  margin-right: 8rpx;
}

.nickname {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 20rpx calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
}

.action-btn {
  min-width: 140rpx;
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
}

.action-btn .icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.share-btn {
  background: #07c160;
}

.quit-btn {
  background: #ff4d4f;
}

.gugu-btn {
  background: #ffa940;
}

.gugu-btn[disabled] {
  background: #d9d9d9;
  color: #fff;
}

.join-btn {
  background: #07c160;
}

.cancel-btn {
  background: #ff4d4f;
}

.action-btn[disabled] {
  background: #d9d9d9 !important;
  color: #fff !important;
  opacity: 0.6;
}

/* 当活动取消时显示的提示 */
.cancelled-tip {
  text-align: center;
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 20rpx;
  background: #fff5f5;
  border-radius: 8rpx;
  margin: 20rpx 0;
}
 