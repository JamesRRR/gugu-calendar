.container {
  padding: 20rpx;
}

.form-group {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 4rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fff;
}

.picker-wrapper {
  width: 100%;
  background-color: #fff;
  border: 2rpx solid #eee;
  border-radius: 4rpx;
}

.picker-content {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #eee;
  border-radius: 4rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fff;
}

button {
  margin-top: 40rpx;
}

.placeholder {
  color: #999;
} 