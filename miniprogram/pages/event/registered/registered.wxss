.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.event-list {
  width: 100%;
}

.event-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.event-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.event-info {
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.event-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.status-upcoming {
  background: #e6f7ff;
  color: #1890ff;
}

.status-past {
  background: #f5f5f5;
  color: #999;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 100rpx 0;
} 