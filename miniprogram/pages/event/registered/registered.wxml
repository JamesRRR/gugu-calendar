<view class="container">
  <view class="header">
    <text class="title">已注册活动</text>
  </view>
  
  <view class="event-list" wx:if="{{events.length > 0}}">
    <view class="event-item" wx:for="{{events}}" wx:key="id" bindtap="goToEventDetail" data-id="{{item._id}}">
      <view class="event-title">{{item.title}}</view>
      <view class="event-info">
        <text class="event-time">{{item.startTime}}</text>
        <text class="event-location">{{item.location}}</text>
      </view>
      <view class="event-status {{item.status === 'upcoming' ? 'status-upcoming' : 'status-past'}}">
        {{item.status === 'upcoming' ? '即将开始' : '已结束'}}
      </view>
    </view>
  </view>

  <view class="empty-state" wx:else>
    <text>还没有注册任何活动哦～</text>
  </view>
</view> 