<view class="container">
  <view class="event-list">
    <block wx:if="{{events.length > 0}}">
      <view class="event-item" 
            wx:for="{{events}}" 
            wx:key="_id" 
            bindtap="goToEventDetail" 
            data-id="{{item._id}}">
        <view class="event-info">
          <text class="event-title">{{item.title}}</text>
          <text class="event-date">{{item.eventDate}}</text>
          <text class="event-desc">{{item.description}}</text>
        </view>
        <view class="event-status {{item.isCancelled ? 'cancelled' : ''}}">
          {{item.isCancelled ? '已取消' : '进行中'}}
        </view>
      </view>
    </block>
    <view wx:else class="empty-tip">
      暂无活动
    </view>
  </view>
</view> 