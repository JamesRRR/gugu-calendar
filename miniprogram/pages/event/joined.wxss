.page-container {
  min-height: 100vh;
  background: #f8f9fd;
  position: relative;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 260rpx;
  background: linear-gradient(45deg, #ff9999, #ffb6c1);
  border-radius: 0 0 50rpx 50rpx;
  z-index: 1;
}

.deco-image {
  width: 100%;
  height: 100%;
}

/* 头部区域 */
.header {
  position: relative;
  z-index: 2;
  padding: 40rpx 30rpx;
}

.header-content {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.15);
}

.title-section {
  margin-bottom: 30rpx;
}

.main-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
}

.stats-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
}

.stat-item {
  text-align: center;
}

.stat-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff9999;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: #eee;
}

/* 活动列表 */
.events-container {
  padding: 30rpx;
  height: calc(100vh - 360rpx);
}

.event-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.date-section {
  width: 120rpx;
  text-align: center;
  padding: 16rpx;
  border-right: 2rpx solid #f0f0f0;
}

.date-day {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff9999;
  display: block;
}

.date-month {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.content-section {
  flex: 1;
  margin-left: 24rpx;
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.status-tag {
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
}

.status-tag.active {
  background: #e8f5e9;
  color: #4caf50;
}

.status-tag.completed {
  background: #e3f2fd;
  color: #2196f3;
}

.status-tag.cancelled {
  background: #ffebee;
  color: #f44336;
}

.event-info {
  margin: 16rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.info-item .cuIcon-time,
.info-item .cuIcon-location {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: #666;
}

.event-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.participants {
  display: flex;
  align-items: center;
}

.avatar-group {
  display: flex;
  margin-right: 12rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: -12rpx;
  background: #f0f0f0;
}

.avatar:first-child {
  margin-left: 0;
}

.participant-count {
  font-size: 24rpx;
  color: #999;
}

.time-remaining {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
}

.time-remaining.urgent {
  color: #ff5252;
  background: #ffebee;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
}

.empty-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.create-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff9999;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
  box-shadow: 0 8rpx 16rpx rgba(255, 153, 153, 0.3);
}

.create-button .cuIcon-add {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #ff9999;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(255, 153, 153, 0.3);
  z-index: 100;
}

.fab .cuIcon-add {
  font-size: 40rpx;
  color: #fff;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.loading-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
} 

.empty-state .cuIcon-emoji {
  font-size: 120rpx;
  color: #ff9999;
  margin-bottom: 40rpx;
}