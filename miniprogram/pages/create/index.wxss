.create-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.form-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #07c160;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 8rpx;
}

input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.time-container {
  display: flex;
  gap: 20rpx;
}

.picker {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-placeholder {
  color: #999;
}

.location-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.location-placeholder {
  color: #999;
}

.slider-container {
  padding: 20rpx 0;
}

.slider-value {
  text-align: center;
  font-size: 32rpx;
  color: #07c160;
  margin-bottom: 20rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.submit-btn {
  width: 90%;
  height: 88rpx;
  background: #07c160;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
} 