.create-container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.form-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.required::after {
  content: '*';
  color: #e64340;
  margin-left: 8rpx;
}

input {
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.time-container {
  display: flex;
  gap: 20rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.location-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.word-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.submit-btn {
  margin-top: 60rpx;
  width: 90%;
} 