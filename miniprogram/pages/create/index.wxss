.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding: 20rpx 20rpx 140rpx 20rpx;
  box-sizing: border-box;
}

.create-btn {
  width: 100% !important;
  margin: 0 0 30rpx 0 !important;
  background: #07c160 !important;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-container {
  padding: 30rpx;
}

.form-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.label {
  font-size: 32rpx !important;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

/* 修改输入框样式 */
input {
  height: 112rpx !important;
  line-height: 112rpx !important;
  font-size: 32rpx !important;
  width: 100% !important;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.input {
  height: 112rpx !important;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  line-height: 112rpx;
  display: flex;
  align-items: center;
}

.picker {
  height: 112rpx !important;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 32rpx !important;
  box-sizing: border-box;
}

/* 调整 placeholder 的样式 */
.placeholder {
  color: #bbb;
  font-size: 32rpx;
  line-height: 112rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 80rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-btn {
  width: 85% !important;
  margin: 0 !important;
  background: #07c160 !important;
  border-radius: 100rpx !important;
  height: 70rpx !important;
  font-size: 32rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 !important;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.number-input {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 112rpx !important;
}

.number-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: #ff9a9e;
  font-weight: bold;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.number-btn.disabled {
  color: #ccc;
  background: #f5f5f5;
  box-shadow: none;
}

.number-value {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.tips {
  font-size: 28rpx;
  color: #999;
  margin-top: 12rpx;
  padding-left: 24rpx;
} 