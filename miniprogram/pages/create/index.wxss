.create-container {
  min-height: 100vh;
  background: #fff6f6;
  padding: 30rpx;
}

.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 182, 193, 0.2);
  border: 2rpx solid #ffe4e6;
  margin-bottom: 30rpx;
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #ff8c98;
  font-weight: 600;
  margin-bottom: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx dashed #ffe4e6;
}

.card-title .icon {
  margin-right: 16rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.required::after {
  content: '*';
  color: #ff8c98;
  margin-left: 8rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #fff8f8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #ffe4e6;
}

.time-container {
  display: flex;
  gap: 20rpx;
}

.picker {
  flex: 1;
  height: 88rpx;
  background: #fff8f8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #ffe4e6;
  display: flex;
  align-items: center;
}

.picker .icon {
  margin-right: 12rpx;
}

.empty {
  color: #999;
}

.location-picker {
  height: 88rpx;
  background: #fff8f8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #ffe4e6;
  display: flex;
  align-items: center;
}

.location-picker .icon {
  margin-right: 12rpx;
}

.location-text {
  flex: 1;
}

.location-text.empty {
  color: #999;
}

.slider-container {
  background: #fff8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #ffe4e6;
}

.slider-value {
  text-align: center;
  font-size: 28rpx;
  color: #ff8c98;
  margin-bottom: 20rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  padding-left: 24rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #fff8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #ffe4e6;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  padding-right: 24rpx;
}

.submit-btn {
  width: 90%;
  height: 88rpx;
  background: #ff8c98;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-btn .icon {
  margin-right: 12rpx;
}

.submit-btn::after {
  border: none;
} 