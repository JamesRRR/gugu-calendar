<view class="container">
  <view class="form-container">
    <view class="form-item">
      <view class="label">活动名称</view>
      <input class="input" 
             placeholder="给活动起个名字吧~" 
             placeholder-class="placeholder"
             model:value="{{title}}"
             maxlength="30"/>
    </view>

    <view class="form-item">
      <view class="label">活动时间</view>
      <picker mode="date" 
              value="{{date}}" 
              start="{{minDate}}" 
              bindchange="onDateChange"
              class="picker">
        <view class="picker-text {{date ? '' : 'placeholder'}}">
          {{date || '选择活动日期'}}
        </view>
      </picker>
      <picker mode="time" 
              value="{{time}}" 
              bindchange="onTimeChange"
              class="picker">
        <view class="picker-text {{time ? '' : 'placeholder'}}">
          {{time || '选择活动时间'}}
        </view>
      </picker>
    </view>

    <view class="form-item">
      <view class="label">活动地点</view>
      <input class="input" 
             placeholder="在哪里进行呢?" 
             placeholder-class="placeholder"
             model:value="{{location}}"
             maxlength="50"/>
    </view>

    <view class="form-item">
      <view class="label">人数限制</view>
      <view class="number-input">
        <view class="number-btn {{maxParticipants <= 0 ? 'disabled' : ''}}" 
              bindtap="decreaseNumber">-</view>
        <input class="number-value" 
               type="number" 
               value="{{maxParticipants}}"
               bindinput="onMaxParticipantsChange"/>
        <view class="number-btn" 
              bindtap="increaseNumber">+</view>
      </view>
      <view class="tips">设置为0表示不限制人数</view>
    </view>

    <view class="form-item">
      <view class="label">活动描述</view>
      <textarea class="textarea" 
                placeholder="描述一下活动内容吧~" 
                placeholder-class="placeholder"
                model:value="{{description}}"
                maxlength="200"/>
      <view class="word-count">{{description.length}}/200</view>
    </view>
  </view>

  <view class="footer">
    <button class="submit-btn" bindtap="createEvent">
      创建活动
    </button>
  </view>
</view> 