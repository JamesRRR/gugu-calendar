<view class="container">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <text class="title">咕咕日历</text>
    <button class="create-btn" bindtap="createEvent">创建活动</button>
  </view>

  <!-- 活动列表 -->
  <view class="event-list">
    <block wx:for="{{events}}" wx:key="id">
      <view class="event-card">
        <view class="event-header">
          <text class="event-title">{{item.title}}</text>
          <text class="event-date">{{item.eventDate}}</text>
        </view>
        
        <view class="event-actions">
          <button class="share-btn" bindtap="shareEvent" data-id="{{item.id}}">
            分享
          </button>
          <button class="gugu-btn" bindtap="guguEvent" data-id="{{item.id}}">
            咕咕
          </button>
        </view>
      </view>
    </block>
  </view>
</view> 