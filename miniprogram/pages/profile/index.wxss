.container {
  padding: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
}

.login-btn {
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.list-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.event-list {
  padding: 20rpx 0;
}

.event-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.event-info {
  flex: 1;
}

.event-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.event-date {
  font-size: 24rpx;
  color: #666;
}

.event-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: #07c160;
  color: #fff;
}

.event-status.cancelled {
  background: #ff4d4f;
}

.profile-container {
  padding: 20px;
} 