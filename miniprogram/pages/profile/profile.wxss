.container {
  padding: 20px;
  background: #F8F9FD;
  min-height: 100vh;
}

/* 用户卡片样式 */
.user-card {
  background: white;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-right: 15px;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  display: block;
}

.user-id {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
  display: block;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  border-top: 1px solid #f0f0f0;
  padding-top: 15px;
}

.stat-item {
  text-align: center;
}

.stat-num {
  font-size: 20px;
  font-weight: bold;
  color: #FF69B4;
  display: block;
}

.stat-label {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

/* 活动列表样式 */
.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin: 20px 0;
}

.event-tabs {
  display: flex;
  background: white;
  border-radius: 8px;
  padding: 4px;
  margin-bottom: 15px;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  font-size: 14px;
  color: #666;
  border-radius: 6px;
}

.tab.active {
  background: #FF69B4;
  color: white;
}

.event-items {
  background: white;
  border-radius: 12px;
  padding: 10px;
}

.event-item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.event-item:last-child {
  border-bottom: none;
}

.event-time {
  margin-right: 15px;
  text-align: center;
}

.date {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  display: block;
}

.time {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.event-content {
  flex: 1;
}

.event-title {
  font-size: 16px;
  color: #333;
  display: block;
  margin-bottom: 4px;
}

.event-location {
  font-size: 12px;
  color: #666;
  display: block;
}

.event-status {
  display: inline-block;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
  margin-top: 8px;
}

.event-status.upcoming {
  background: #E8F5E9;
  color: #4CAF50;
}

.event-status.ongoing {
  background: #E3F2FD;
  color: #2196F3;
}

.event-status.completed {
  background: #F5F5F5;
  color: #9E9E9E;
}

.event-status.cancelled {
  background: #FFEBEE;
  color: #F44336;
}

/* 功能按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 20px;
}

.action-btn {
  flex: 1;
  margin: 0 10px;
  background: white;
  border: none;
  border-radius: 8px;
  padding: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.action-btn image {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}

.action-btn text {
  font-size: 14px;
  color: #666;
} 