.event-list {
  padding: 20rpx;
}

.event-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.event-title {
  font-size: 32rpx;
  font-weight: bold;
}

.event-time {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
} 