<view class="create-container">
  <form bindsubmit="submitForm">
    <!-- 基本信息卡片 -->
    <view class="form-card">
      <view class="card-title">
        <text class="icon">🌸</text>
        <text>基本信息</text>
      </view>
      
      <view class="form-item">
        <text class="label required">活动名称</text>
        <input 
          class="input" 
          name="title" 
          placeholder="给活动起个可爱的名字吧~" 
          value="{{formData.title}}" 
          bindinput="onTitleInput" 
        />
      </view>

      <view class="form-item">
        <text class="label">开始时间（必选日期）</text>
        <view class="time-container">
          <picker mode="date" value="{{formData.startDate}}" bindchange="onStartDateChange">
            <view class="picker {{formData.startDate ? '' : 'empty'}}">
              <text class="icon">📅</text>
              <text>{{formData.startDate ? formData.startDate : '选择日期'}}</text>
            </view>
          </picker>
          <picker mode="time" value="{{formData.startTime}}" bindchange="onStartTimeChange">
            <view class="picker {{formData.startTime ? '' : 'empty'}}">
              <text class="icon">⏰</text>
              <text>{{formData.startTime ? formData.startTime : '选择时间（可选）'}}</text>
            </view>
          </picker>
        </view>
      </view>

      <view class="form-item">
        <text class="label">结束时间（必选日期）</text>
        <view class="time-container">
          <picker mode="date" value="{{formData.endDate}}" bindchange="onEndDateChange">
            <view class="picker {{formData.endDate ? '' : 'empty'}}">
              <text class="icon">📅</text>
              <text>{{formData.endDate ? formData.endDate : '选择日期'}}</text>
            </view>
          </picker>
          <picker mode="time" value="{{formData.endTime}}" bindchange="onEndTimeChange">
            <view class="picker {{formData.endTime ? '' : 'empty'}}">
              <text class="icon">⏰</text>
              <text>{{formData.endTime ? formData.endTime : '选择时间（可选）'}}</text>
            </view>
          </picker>
        </view>
      </view>

      <view class="form-item">
        <text class="label">活动地点（可选）</text>
        <view class="location-picker" bindtap="chooseLocation">
          <text class="icon">📍</text>
          <text class="location-text {{!formData.location.name && 'empty'}}">
            {{formData.location.name || '点击选择活动地点~'}}
          </text>
        </view>
      </view>

      <view class="form-item">
        <text class="label">人数限制</text>
        <input 
          class="input" 
          type="number" 
          name="maxParticipants" 
          placeholder="不填则不限制人数哦~" 
          value="{{formData.maxParticipants}}" 
        />
      </view>
    </view>

    <!-- 收款设置卡片 -->
    <view class="form-card">
      <view class="card-title">
        <text class="icon">💰</text>
        <text>收款设置</text>
      </view>

      <view class="form-item">
        <text class="label required">人均预收款金额</text>
        <view class="payment-input">
          <input 
            class="input" 
            type="digit" 
            name="paymentAmount" 
            placeholder="请输入每人需要预先支付的金额" 
            value="{{formData.paymentAmount}}"
            bindinput="onPaymentAmountInput"
          />
        </view>
      </view>

      <view class="form-item">
        <text class="label">活动预估总价（可选）</text>
        <view class="payment-input">
          <input 
            class="input" 
            type="digit" 
            name="totalAmount" 
            placeholder="请输入活动预估总价" 
            value="{{formData.totalAmount}}"
            bindinput="onTotalAmountInput"
          />
        </view>
        <text class="tips">活动结束后将退款多余的押金</text>
      </view>
    </view>

    <!-- 活动详情卡片 -->
    <view class="form-card">
      <view class="card-title">
        <text class="icon">💝</text>
        <text>活动详情</text>
      </view>
      
      <view class="form-item">
        <text class="label">活动简介</text>
        <textarea 
          class="textarea" 
          name="description" 
          placeholder="写点什么来介绍这个活动吧~" 
          maxlength="500" 
          value="{{formData.description}}" 
          bindinput="onDescriptionInput"
        />
        <text class="word-count">{{descriptionLength}}/500</text>
      </view>
    </view>

    <button class="submit-btn" form-type="submit">
      <text class="icon">🎀</text>
      <text>创建活动</text>
    </button>
  </form>

  <!-- 子页面不显示系统 tabBar：这里提供返回主界面入口 -->
  <view class="subpage-footer-nav">
    <view class="nav-item" bindtap="goToTab" data-index="0">
      <icon type="success" size="22" />
      <text>已注册</text>
    </view>
    <view class="nav-item active" bindtap="goToTab" data-index="1">
      <icon type="add" size="22" />
      <text>创建</text>
    </view>
    <view class="nav-item" bindtap="goToTab" data-index="2">
      <icon type="personal" size="22" />
      <text>我的</text>
    </view>
  </view>
</view> 