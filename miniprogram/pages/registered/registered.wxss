.registered-container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.event-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.event-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.event-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.event-status.pending {
  background: #e6f7ff;
  color: #1890ff;
}

.event-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.event-status.cancelled {
  background: #fff1f0;
  color: #ff4d4f;
}

.event-status.gugu {
  background: #fff7e6;
  color: #fa8c16;
}

.event-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.info-row .icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.info-row .text {
  flex: 1;
}

.empty-state {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 200rpx;
} 