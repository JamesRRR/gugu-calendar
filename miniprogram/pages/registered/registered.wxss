.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f6f6f6;
}

.event-list {
  padding-bottom: 40rpx;
}

.event-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.event-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.event-info {
  font-size: 28rpx;
  color: #666;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tip .icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
} 