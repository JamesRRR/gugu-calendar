.faq-container {
  padding: 20rpx;
  background: #f5f5f5;
}

.faq-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.question {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.answer {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
} 