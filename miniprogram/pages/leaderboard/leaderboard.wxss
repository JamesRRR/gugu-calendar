.leaderboard-container {
  min-height: 100vh;
  background: #fff6f6;
  padding: 30rpx;
}

/* 标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff8c98;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #ff8c98;
}

/* 今日咕王区域 */
.today-king-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 182, 193, 0.2);
  border: 2rpx solid #ffe4e6;
}

.king-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe4e6 100%);
  border-radius: 16rpx;
}

.king-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff5f5;
  font-size: 60rpx;
}

.king-info {
  flex: 1;
}

.king-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff8c98;
  margin-bottom: 12rpx;
}

.king-stats {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #666;
}

.king-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #ffd700;
  color: #8b4513;
  font-size: 22rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 排行榜列表 */
.leaderboard-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 182, 193, 0.2);
  border: 2rpx solid #ffe4e6;
}

.leaderboard-list {
  margin-top: 10rpx;
}

.leaderboard-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx dashed #ffe4e6;
  transition: background 0.2s;
}

.leaderboard-item:last-child {
  border-bottom: none;
}

.leaderboard-item.king-item {
  background: #fffef0;
}

.rank-number {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #999;
  background: #f5f5f5;
  border-radius: 50%;
  margin-right: 16rpx;
}

.rank-number.top-three {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  color: #fff;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.king-icon {
  font-size: 28rpx;
}

.user-stats {
  display: flex;
  gap: 16rpx;
  margin-top: 6rpx;
}

.stat-tag {
  font-size: 22rpx;
  color: #ff8c98;
  background: #fff5f5;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.stat-rate {
  font-size: 22rpx;
  color: #999;
}

.dove-status-icon {
  margin-left: 10rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部说明 */
.footer-note {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 182, 193, 0.2);
  border: 2rpx solid #ffe4e6;
}

.footer-note text {
  font-size: 22rpx;
  color: #999;
}
