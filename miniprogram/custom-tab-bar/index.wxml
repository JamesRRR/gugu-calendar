<cover-view class="tab-bar">
  <cover-view class="tab-bar-item" wx:for="{{list}}" wx:key="index" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-view class="tab-icon" style="color: {{selected === index ? selectedColor : color}}">
      <cover-view wx:if="{{selected === index}}" class="icon-view">{{item.selectedIconText}}</cover-view>
      <cover-view wx:else class="icon-view">{{item.iconText}}</cover-view>
    </cover-view>
    <cover-view class="tab-text" style="color: {{selected === index ? selectedColor : color}}">
      {{item.text}}
    </cover-view>
  </cover-view>
</cover-view> 